<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    app:cardElevation="8dp"
    android:backgroundTint="@color/black"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Name"
            android:id="@+id/txtSymbolNameBid"
            android:textColor="@color/light_blue"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.42%"
            android:id="@+id/txtSymbolBid"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/txtSymbolHigh"
            android:layout_toRightOf="@id/txtSymbolNameBid"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.42%"
            android:id="@+id/txtSymbolAsk"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"

            android:layout_below="@id/txtSymbolBid"
            android:layout_toLeftOf="@id/txtSymbolHigh"
            android:layout_toRightOf="@id/txtSymbolNameBid"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="723,21"
            android:id="@+id/txtSymbolHigh"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="723,21"
            android:id="@+id/txtSymbolLow"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/txtSymbolHigh"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/txtSymbolNameBid"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>